  <th style='border-right: 1px solid; padding: 3px 5px;'>Дом</th>
  <th style='border-right: 1px solid; padding: 3px 5px;'>Подъезд</th>
  <th style='border-right: 1px solid; padding: 3px 5px;'>Домофон</th>
  <th style='border-right: 1px solid; padding: 3px 5px;'>Квартира</th>
  <th style='border-right: 1px solid; padding: 3px 5px;'>Примичание</th>
</tr>
<tr>
  <td style='border-right: 1px solid; padding: 3px 5px;'>{{data.name}}</td>
  <td style='border-right: 1px solid; padding: 3px 5px;'>{{data.phone}}</td>
  <td style='border-right: 1px solid; padding: 3px 5px;'>{{data.street}}</td>
  <td style='border-right: 1px solid; padding: 3px 5px;'>{{data.home}}</td>
  <td style='border-right: 1px solid; padding: 3px 5px;'>{{data.port}}</td>
  <td style='border-right: 1px solid; padding: 3px 5px;'>{{data.intercom}}</td>
